  <install>
  <queries>
	<query>DROP TABLE IF EXISTS `#__heximage_album`</query>
	<query>
	CREATE TABLE `#__heximage_album` (
  	`albumid` smallint(5) NOT NULL auto_increment,
  	`album_name` varchar(30) NOT NULL default '',
  	`album_description` text NOT NULL,
  	`published` char(1) NOT NULL default '',
  	PRIMARY KEY  (`albumid`)
	) TYPE=MyISAM AUTO_INCREMENT=1 ;
	</query>
	<query>DROP TABLE IF EXISTS `#__heximage_photo`</query>
	<query>
	CREATE TABLE `#__heximage_photo` (
    `photoid` smallint(10) NOT NULL auto_increment,
    `album_type` text NOT NULL,
    `thumb` varchar(255) NOT NULL default '',
    `url` varchar(255) NOT NULL default '',
    `description` text NOT NULL,
    `hsize` smallint(4) NOT NULL default '0',
    `vsize` smallint(4) NOT NULL default '0',
  	`published` char(1) NOT NULL default '',	
    PRIMARY KEY  (`photoid`)
    ) TYPE=MyISAM AUTO_INCREMENT=1 ;
    </query>
	</queries>
  </install>
  <uninstall>
      <queries>
      <query>DELETE FROM `#__heximage_album`</query>
      <query>DROP TABLE `#__heximage_album`</query>
      <query>DELETE FROM `#__heximage_photo`</query>
      <query>DROP TABLE `#__heximage_photo`</query>
      </queries>
  </uninstall>
